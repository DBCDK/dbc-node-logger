{
  "name": "dbc-node-logger",
  "version": "1.4.9",
  "description": "DBC logger module that ensures logging to central DBC Kafka host",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha --compilers js:babel/register src/__tests__ -R mocha-jenkins-reporter",
    "test:junit": "npm run test",
    "test:watch": "mocha --compilers js:babel/register src/__tests__ -w",
    "cleardist": "rm -rf ./dist",
    "build": "npm run cleardist && babel ./src -d dist",
    "lint": "eslint ./src",
    "lint:checkstyle": "eslint ./src  -o report.xml -f checkstyle",
    "watch": "npm run cleardist && babel ./src --watch -d dist --ignore __tests__",
    "reinstall": "rm -r node_modules && npm install"
  },
  "keywords": [
    "dbc",
    "dbcdk",
    "logger"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DBCDK/dbc-node-logger"
  },
  "bugs": {
    "url": "https://github.com/DBCDK/dbc-node-logger/issues"
  },
  "author": "dbcdk",
  "license": "GPL-3.0",
  "dependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.23",
    "babel-loader": "^5.3.2",
    "express-winston": "^0.4.1",
    "webpack": "^1.12.0",
    "winston": "^2.1.0",
    "winston-kafka-transport": "^0.1.6"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.0",
    "chai": "^3.2.0",
    "eslint": "^1.2.1",
    "mocha": "^2.2.5",
    "mocha-jenkins-reporter": "^0.1.9",
    "sinon": "^1.16.1"
  }
}
